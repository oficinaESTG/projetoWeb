<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.oficinaestg">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.OficinaESTG"
        android:usesCleartextTraffic="true">
        <activity android:name=".Vistas.DetalhesCarroVendaActivity"></activity>
        <activity android:name=".Vistas.RegistoActivity" />
        <activity android:name=".Vistas.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Vistas.MenuMainActivity"
            android:label="@string/title_activity_menu_main"
            android:theme="@style/Theme.OficinaESTG.NoActionBar" />
    </application>

</manifest>